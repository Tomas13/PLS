            android:layout_height="wrap_content">

            <TableRow
                android:layout_weight="3">

                <TextView
                    android:id="@+id/tv_general_invoice_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:text="O2016182183939111" />

                <TextView
                    android:id="@+id/tv_from_dept_name"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:text="012010" />

                <TextView
                    android:id="@+id/tv_from_dept_name_ru"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:text="[Тест-19]" />

                <!--<TextView-->
                <!--android:id="@+id/tv_from_dept_name_ru"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_column="2"-->
                <!--android:text="[Тест-19]" />-->

                <Button
                    android:id="@+id/btn_retrieve"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/retrieve" />

            </TableRow>
        </TableLayout>
    </LinearLayout>
</layout>